<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:paddingBottom="@dimen/activity_vertical_margin"
  tools:context="net.ceksor.CalcResult" android:focusableInTouchMode="true" android:focusable="true"
>

	<TextView
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:textAppearance="?android:attr/textAppearanceLarge"
	  android:text="Sonuç:"
	  android:id="@+id/textView1" android:layout_alignParentTop="true"
	  android:layout_margin="30dp" android:layout_centerInParent="true"
	  android:textSize="@dimen/abc_text_size_display_3_material" android:singleLine="true"/>
	<TextView
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:textAppearance="?android:attr/textAppearanceLarge"
	  android:text="hata!"
	  android:id="@+id/textView2" android:layout_below="@+id/textView1" android:layout_centerHorizontal="true"
	  android:layout_margin="20dp" android:textSize="@dimen/abc_text_size_display_2_material"
	  android:singleLine="true"/>
	<Button
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:text="Kaydet"
	  android:id="@+id/button1"
	  android:singleLine="true"
	  android:textSize="@dimen/abc_text_size_headline_material"
	  style="@style/Widget.AppCompat.Button.Colored"
	  android:layout_alignParentBottom="true" android:layout_centerInParent="true" android:layout_margin="20dp"/>
	<Button
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:text="Geri"
	  android:id="@+id/button2" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
	  android:layout_alignParentStart="true" android:layout_margin="20dp" android:singleLine="true"
	  android:textSize="@dimen/abc_text_size_headline_material" android:layout_centerInParent="true"/>
	<EditText
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:id="@+id/editText" android:layout_below="@+id/textView2" android:layout_centerHorizontal="true"
	  android:layout_margin="20dp"
	  android:textIsSelectable="true" android:singleLine="true" android:hint="çek adı"
	  android:textAlignment="center" android:textSize="@dimen/abc_text_size_headline_material"
	  android:editable="true" android:focusable="true" android:enabled="true"
	  android:focusableInTouchMode="true" android:clickable="true" android:selectAllOnFocus="true"
	  android:inputType="textNoSuggestions|textShortMessage|none|text" android:typeface="monospace"
	  android:textStyle="normal" android:translationZ="5dp"/>
</RelativeLayout>
